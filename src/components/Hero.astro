---
import SocialLinks from "./SocialLinks.astro";
---

<section class="min-h-screen flex items-center justify-center relative">
    <div class="absolute top-0 left-0 w-full h-full bg-black opacity-50">
    </div>
    <div class="flex flex-col justify-center items-center h-full z-10 m-10">
        <div class="flex flex-col justify-center items-center">
            <h1 class="text-4xl font-bold text-center uppercase mb-8 text-gray-300">Hey, I'm <span class="text-green-600">Eslam</span> Khalaf</h1>
            <p class="text-center leading-loose capitalize text-xl mb-8 text-gray-300">A focused <span class="border-b-4 border-green-500 uppercase px-1">Web Developer</span> who is building Websites and Web Applications that leads to the success of the overall product</p>
        </div>
        <div class="flex flex-col justify-center items-center">
            <img src="/avatar.png" alt="random image" class=" h-64 w-64 object-cover">
        </div>
        <SocialLinks />
        <div class="flex flex-col justify-center items-center mt-8">
            <a href="#projects" class="border-2 border-green-600 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-md uppercase">My Work</a>
        </div>
    </div>
</section>

<style>
  /* change section background image with opacity equals 0.5 */

  section div.absolute {
    background-image: url('/hero.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    opacity: 0.3;
  }


</style>